---
import GitHub from "./icons/GitHub.astro"
import Html from "./icons/Html.astro"
import Javascript from "./icons/Javascript.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Php from "./icons/Php.astro"
import Treejs from "./icons/Treejs.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Sql from "./icons/Mysql.astro"

const TAGS = {
  TREEJS: {
    name: "Tree.js",
    class: "bg-black text-white",
    icon: Treejs,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#003159] text-white",
    icon: Bootstrap,
  },
  PHP: {
    name: "PHP",
    class: "bg-orange-800 text-white",
    icon: Php,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-800 text-white",
    icon: Javascript,
  },
  HTML: {
    name: "HTML",
    class: "bg-red-600 text-white",
    icon: Html,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-blue-800 text-white",
    icon: Sql,
  },
}
const PROJECTS = [
  {
    title: "Sistema de Biblioteca Virtual en PHP",
    description:
      "Biblioteca de libros en línea desarrollada en PHP con MySQL. Permite a los usuarios buscar, leer y agregar libros digitalmente. Incluye gestión de usuarios y administración.",
    link: "https://brandondc.gt.tc/biblioteca-virtua/",
    github: "https://github.com/Brandon-DC-dev/biblioteca-virtua",
    image: "/projects/phpsistem1.webp",
    tags: [TAGS.PHP, TAGS.BOOTSTRAP, TAGS.JAVASCRIPT, TAGS.HTML, TAGS.MYSQL],
  },
  {
    title: "360 Grados - Visualizador 3D con Tree.js",
    description:
      "Panolens.js se basa en Three.JS (un marco 3D) con un área de interés específico en panorama, realidad virtual y potencialmente realidad aumentada para un recorrido virtual.",
    link: "https://sparkling-sunshine-da227f.netlify.app",
    github: "https://github.com/Brandon-DC-dev/360-grados",
    image: "/projects/360recorrido.webp",
    tags: [TAGS.TREEJS, TAGS.JAVASCRIPT, TAGS.HTML],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



